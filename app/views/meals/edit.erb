<h2>Edit this new meal.</h2>
<form action="/meals" method="POST">
    <p><label for="meal_name">Meal Name:</label><input type="text" name="meal[name]"></p>
    <% @items.each do |item| %>
        <p><input type="checkbox" name="meal[item_ids][]" value="<%= item.id %>"><%= item.name %></p>
    <% end %>    
    <input type="submit" value="Submit">
</form>

<% @items.each do |item| %>
        <p><input type="checkbox" name="meal[item_ids][]" 
        <% @meals_items.each do |meal_item| %>
            <% if (meal_item.item_id == item.id) %>
                <%= 'checked' %>
            <% end %>
        <% end %>
        value="<%= item.id %>"><%= item.name %></p>
    <% end %> 