<div class="row">
    <div class="col-md-4">
        <div class="card" style="width: 100%;">
            <div class="card-body">
                <form action="/meals/<%= @meal.id %>" method="POST">
                    <input id="hidden" type="hidden" name="_method" value="patch">
                    <p><label for="meal_name">Meal Name:</label><input type="text" class="form-control"
                            name="meal[name]" value="<%= @meal.name %>"></p>
                    <p>Items:</p>
                    <% @all_items.each do |item| %>
                    <p>
                        <input type="checkbox" name="meal[item_ids][]" <% @meal_items.each do |meal_item| %>
                            <% if (meal_item.id == item.id) %> checked="checked" <% end %> <% end %>
                            value="<%= item.id %>">
                        <%= item.name %>
                    </p>
                    <% end %>
                    <input type="submit" value="Submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
</div>