<div class="row">
  <div class="col-sm">
    <h2>Meal Name: <%= @meal.name %></h2>
    <h2>Items:</h2>
    <div class="accordion">
      <% @items.each do |item| %>
          <div class="card">
          <div class="card-header"">
            <h2 class="mb-0">
              <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse<%= item.id %>" aria-expanded="true" aria-controls="collapse<%= item.id %>">
                <h3><%= item.name %></h3>
              </button>
            </h2>
          </div>

          <div id="collapse<%= item.id %>" class="collapse">
            <div class="card-body">
              <p>Calories: <%= item.calories %></p>
              <p>Total Fat: <%= item.total_fat %></p>
              <p>Cholesterol: <%= item.cholesterol %></p>
              <p>Sodium: <%= item.sodium %></p>
              <p>Total Carbs: <%= item.total_carbs %></p>
              <p>Protein: <%= item.protein %></p>
              <a href="/items/<%= item.id %>"><button>View Item</button></a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <br>
    <a href="/meals/<%= @meal.id %>/edit"><button>Edit Meal</button></a>
  </div>
  <div class="col-sm">
    <h2>Options</h2>
    <form action="/meals/<%= @meal.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete" />
      <input type="submit" value="Delete Meal" />
    </form>
  </div>
</div>


