<form action="/users" method="post">
    <p><label for="name">Name:</label><input type="text" name="name" id="name" required></p>
    <p><label for="height">Height in Inches:</label><input type="number" name="height" id="height" min="0" max="100"></p>
    <p><label for="weight">Weight in Pounds:</label><input type="number" name="weight" id="weight" min="0" max="1000"></p>
    <p><label for="email">Email:</label><input type="email" name="email" id="email" required></p>
    <p><label for="password">Password:</label><input type="password" name="password" id="password" required></p>

    <input type="submit" value="Submit">
</form>